function start()
{
  logo
  line
  echo -e "$color1 [1]$gx"
  echo -e "$color2 [2]$interesting"
  echo -e "$color3 [3]$hack"
  echo -e "$color4 [4]$python_lib"
  echo -e "$color5 [5]$change_source"
  echo -e "$color6 [6]$source_its_pointless"
  echo -e "$color5 [7]$embellish_terminal"
  echo -e "$color4 [8]$vim"
  echo -e "$color3 [9]$soft_keyboard"
  echo -e "$color2 [10]$all"
  echo -e "$color1 [66]$q"
  echo -e "$color6 $please_input"
  line
  inp
  read choice
  case $choice in
    1) rm -rf $PREFIX/bin/what&&wget https://github.com/nidhoggfgg/whatandwhy/raw/master/what&&mv what $PREFIX/bin/&&chmod 777 $PREFIX/bin/what&&what
      ;;
    2) interesting_things
      ;;
    3) pentest_tools
      ;;
    4) python_libs
      ;;
    5) echo "deb http://mirrors.tuna.tsinghua.edu.cn/termux stable main" > $PREFIX/etc/apt/sources.list&&start
      ;;
    6) its&&start
      ;;
    7) pkg install zsh&&chsh -s zsh&&wget https://github.com/Cabbagec/termux-ohmyzsh/raw/master/install.sh&&chmod +x install.sh&&./install.sh&&sed -i "s/robbyrussell/darkblood/g" .zshrc&&echo "$rst"
      ;;
    8) cd&&pkg install vim&&curl -sLf https://spacevim.org/install.sh | bash
      ;;
    9) mkdir -p $HOME/.termux/&&echo "extra-keys = [['ESC','/','-','HOME','UP','END','PGUP'],['TAB','CTRL','ALT','LEFT','DOWN','RIGHT','PGDN']]" > $HOME/.termux/termux.properties&&echo "$rst"
      ;;
    10) all
      ;;
    66) echo "$thank"
      ;;
    *) echo "$re_input"&&start
      ;;
esac
}
choosepeo()
{
  apt upgrade -y
  pkg install curl wget vim unzip unrar man git -y
  clear
  echo "[1]I know English"
  echo "[2]æˆ‘æ‡‚ä¸­æ–‡"
  inp
  read peo 
  case $peo in
    1) English
      ;;
    2) Chinese
      ;;
    *) echo "please input 1 or 2"&&echo "è¯·è¾“å…¥1æˆ–2"&&choosepeo 
      ;;
  esac
}
