  echo -e "$color2[11]requests     |[23]$all"
  echo -e "$color1[12]demjson      |[66]$return"
  echo -e "$color6$ps"
  echo "$please_input"
  echo "$long_time"
  line
  inp
	read pykssr
  case $pykssr in
    1) pkg install python python-dev -y&&python_libs
